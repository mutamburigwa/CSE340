<!-- views/inventory/add-classification.ejs -->

<main>
  <h1>Add New Classification</h1>

  <!-- Flash Messages -->
  <% if (messages.error && messages.error.length > 0) { %>
  <div class="flash-messages">
    <% messages.error.forEach(function(msg) { %>
    <p class="error"><%= msg %></p>
    <% }) %>
  </div>
  <% } %>

  <% if (messages.info && messages.info.length > 0) { %>
  <div class="flash-messages">
    <% messages.info.forEach(function(msg) { %>
    <p class="info"><%= msg %></p>
    <% }) %>
  </div>
  <% } %>

  <form action="/inv/add-classification" method="post">
    <label for="classification_name">Classification Name:</label>
    <input type="text" id="classification_name" name="classification_name" value="<%= classification_name %>">
    <button type="submit">Add Classification</button>
  </form>
</main>
