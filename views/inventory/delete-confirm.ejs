<%- include('../partials/header') %>
<h1>Confirm Deletion - The delete is permanent.</h1>
<form action="/inv/delete" method="post">
    <input type="hidden" name="inv_id" value="<%= inv_id %>">
    <label for="make">Make:</label>
    <input type="text" id="make" name="make" value="<%= make %>" readonly><br>

    <label for="model">Model:</label>
    <input type="text" id="model" name="model" value="<%= model %>" readonly><br>

    <label for="year">Year:</label>
    <input type="text" id="year" name="year" value="<%= year %>" readonly><br>

    <label for="price">Price:</label>
    <input type="text" id="price" name="price" value="<%= price %>" readonly><br>

    <input type="submit" value="Delete">
</form>
<%- include('../partials/footer') %>
