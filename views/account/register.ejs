<% if (messages.error && messages.error.length > 0) { %>
  <div class="flash-message">
    <ul>
      <% messages.error.forEach(function(message){ %>
        <li><%= message %></li>
      <% }); %>
    </ul>
  </div>
<% } %>

<% if (errors && errors.length > 0) { %>
  <ul class="notice">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<h1>Register</h1>

<form class="registration-form" action="/account/register" method="post">
  <div>
    <label for="account_firstname">First Name</label>
    <input type="text" name="account_firstname" id="accountFirstname" required value="<%= locals.account_firstname %>">
  </div>
  <div>
    <label for="account_lastname">Last Name</label>
    <input type="text" id="account_lastname" name="account_lastname" required value="<%= locals.account_lastname %>">
  </div>
  <div>
    <label for="account_email">Email</label>
    <input type="email" id="account_email" name="account_email" required value="<%= locals.account_email %>">
  </div>
  <div>
    <label for="account_password">Password</label>
    <input type="password" id="account_password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
    <span>must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
    <button type="button" onclick="togglePassword()">Show/Hide Password</button>
  </div>
  <div>
    <button type="submit">Register</button>
  </div>
</form>

<p>Already have an account? <a href="/account/login">Login here</a></p>

<script>
  function togglePassword() {
    var passwordField = document.getElementById("account_password");
    var type = passwordField.getAttribute("type") === "password" ? "text" : "password";
    passwordField.setAttribute("type", type);
  }
</script>
